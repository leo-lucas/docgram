{
  "name": "docgram",
  "version": "1.0.0",
  "description": "Generate diagrams from source code",
  "main": "dist/index.js",
  "bin": {
    "docgram": "dist/cli.js"
  },
  "files": ["dist", "README.md"],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "diagram": "npm run build && node dist/cli.js diagram",
    "docs": "npm run build && node dist/cli.js docs",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --testPathIgnorePatterns=fixtures\\.e2e\\.test\\.ts",
    "test:e2e": "jest --coverage=false test/fixtures.e2e.test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier -w .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/leo-lucas/docgram.git"
  },
  "homepage": "https://github.com/leo-lucas/docgram#readme",
  "dependencies": {
    "commander": "^14.0.0",
    "ts-morph": "^26.0.0",
    "typescript-language-server": "^4.4.0",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver-protocol": "^3.17.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "@typescript-eslint/parser": "^7.8.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0"
  }
}
